<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.metlinkliveapp.MainActivity"
    android:background="#00364b">

    <!-- http://developer.android.com/reference/android/widget/ImageButton.html -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/main_location_button"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/location_selector"
            android:scaleType="fitCenter"
            android:layout_marginTop="26dp"
            android:background="#00ffffff"
            android:contentDescription="location"
            android:clickable="true"
            android:onClick="openLocation" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/main_stop_info_button"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/stop_info_selector"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:background="#00ffffff"
            android:contentDescription="stop information"
            android:clickable="true"
            android:onClick="openStopInfo" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/main_bus_location_button"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/bus_selector"
            android:layout_marginTop="10dp"
            android:background="#00ffffff"
            android:contentDescription="bus locations"
            android:clickable="true"
            android:onClick="openBusLocation"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="48.8dp"
        android:id="@+id/main_title"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/main_logo"
        android:contentDescription="main logo"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>
